<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.serdyuk.androidlearning.SendEmail"
    tools:showIn="@layout/activity_send_email"
    android:layout_column="2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0"
        android:text="@string/send_to" />

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_row="0"
        android:layout_column="1"
        android:id="@+id/send_to"
        android:layout_gravity="fill_horizontal"
        android:hint="@string/hint_send_to"/>

    <EditText
        android:id="@+id/body_message"
        android:hint="@string/body_message_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:gravity="top"/>

    <Button
        android:text="@string/send_button"
        android:id="@+id/send_button"
        android:layout_row="2"
        android:layout_gravity="center_horizontal"
        android:layout_column="1"
        android:layout_columnSpan="2"/>

</GridLayout>
